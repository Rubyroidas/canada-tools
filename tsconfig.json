{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": false,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "removeComments": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/*.test.ts"
  ]
}
